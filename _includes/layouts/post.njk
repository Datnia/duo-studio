---
layout: layouts/base.njk
---

<div class="barba-container loading" data-barba="container" data-barba-namespace="insights" id="smooth-wrapper">
    <main id="smooth-content">
        <section id="entry">
            <h1>{{ title }}</h1>
            <ul class="post-metadata">
                <li>
                    <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
                </li>
                {%- for tag in tags | filterTagList %}
                    {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
                    <li>
                        <a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>
                        {%- if not loop.last %},
                        {% endif %}
                    </li>
                {%- endfor %}
            </ul>
            {{ content | safe }}
            {%- if collections.posts %}
                {%- set previousPost = collections.posts | getPreviousCollectionItem %}
                {%- set nextPost = collections.posts | getNextCollectionItem %}
                {%- if nextPost or previousPost %}
                    <ul class="links-nextprev">
                        {%- if previousPost %}
                            <li>Previous:
                                <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
                            </li>
                        {% endif %}
                        {%- if nextPost %}
                            <li>Next:
                                <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
                            </li>
                        {% endif %}
                    </ul>
                {%- endif %}
            {%- endif %}
        </section>
        <div class="footer-spacer footer-trigger">
            <footer class="">
                <div class="grid">
                    <h4 class="st__headline headline__footer lg">Start a project</h4>
                    <a class="btn__circle" href="/contact">
                        <p>Get in Touch</p>
                    </a>
                    <h2>
                        Create an experience thatâ€™s as remarkable as your business.
                    </h2>
                </div>
                <div class="row">
                    <div class="col">
                        <span>Main Hubs</span>
                        <p>DC, Maryland, Virginia</p>
                    </div>
                    <div class="col">
                        <span>General Inquiries</span>
                        <a href="mailto:hello@duo-studio.co" class="cursor__hover --highlight">hello@duo-studio.co</a>
                    </div>
                    <div class="col">
                        <span>Follow Us</span>
                        <div class="row">
                            <a
                                href="https://www.instagram.com/duostudio_co/"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="cursor__hover --highlight">Instagram,</a>
                            <a
                                href="https://www.linkedin.com/company/duostudio/"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="cursor__hover --highlight">LinkedIn</a>
                        </div>
                    </div>
                    <div class="col copyright subtitle">
                        &copy;2023 Duo Studio
                        <a class="cursor__hover --highlight" href="/privacy-policy">Privacy Policy</a>
                    </div>
                </div>
            </footer>
        </div>
    </main>
</div>