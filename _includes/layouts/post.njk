---
layout: layouts/base.njk
---

<div class="barba-container loading" data-barba="container" data-barba-namespace="journal" id="smooth-wrapper">
    <main id="smooth-content">
        <section id="post" class="entry">
            <div class="section__wrapper">
                <div class="entry__thumbnail">
                    {% if featImage %}
                        {% set img = featImage %}
                        {% image img, "featured-image" %}
                    {% endif %}
                </div>
                <h1 class="entry__headline title-2 headline__load">{{ title }}</h1>
                <ul class="entry__metadata">
                    <div class="st__line"></div>
                    {% if category %}
                        <div class="btn__small entry__metadata--btn">
                            {{ category }}
                        </div>
                    {% endif %}
                    <li>
                        <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
                    </li>
                </ul>
                <div class="entry__content">
                    {{ content | safe }}
                    <div class="entry__content--share">
                        <p class="subtitle">Share On:</p>
                        <div class="entry__content--share-links">
                            <a href="/" class="btn__small --tag cursor__hover --highlight">Facebook</a>
                            <a href="/" class="btn__small --tag cursor__hover --highlight">LinkedIn</a>
                            <a href="/" class="btn__small --tag cursor__hover --highlight">Twitter</a>
                        </div>
                    </div>
                </div>
                {%- if collections.posts %}
                    {% set postslist = collections.posts %}
                    <div class="entry__related">
                        <h2 class="st__headline">Recent Entries</h2>
                        <div class="row">
                            {% for post in postslist | reverse %}
                                {% if page.url != post.url %}
                                    <a class="col cursor__hover --highlight" href="{{ post.url }}">
                                        {% set relatedThumb = "../"+post.data.permalink+post.data.featImage %}
                                        {% image relatedThumb, "featured-image" %}
                                        <h3>{{ post.data.title }}</h3>
                                    </a>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            </div>
        </section>
        <div class="footer-spacer footer-trigger">
            <footer>
                <div class="grid">
                    <h4 class="st__headline headline__footer lg">Start a project</h4>
                    <a class="btn__circle" href="/contact">
                        <p>Get in Touch</p>
                    </a>
                    <h2>
                        Create an experience thatâ€™s as remarkable as your business.
                    </h2>
                </div>
                <div class="row">
                    <div class="col">
                        <span>Main Hubs</span>
                        <p>DC, Maryland, Virginia</p>
                    </div>
                    <div class="col">
                        <span>General Inquiries</span>
                        <a href="mailto:hello@duo-studio.co" class="cursor__hover --highlight">hello@duo-studio.co</a>
                    </div>
                    <div class="col">
                        <span>Follow Us</span>
                        <div class="row">
                            <a
                                href="https://www.instagram.com/duostudio_co/"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="cursor__hover --highlight">Instagram,</a>
                            <a
                                href="https://www.linkedin.com/company/duostudio/"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="cursor__hover --highlight">LinkedIn</a>
                        </div>
                    </div>
                    <div class="col copyright subtitle">
                        &copy;2023 Duo Studio
                        <a class="cursor__hover --highlight" href="/privacy-policy">Privacy Policy</a>
                    </div>
                </div>
            </footer>
        </div>
    </main>
</div>